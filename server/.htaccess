# Enable CORS
Header always set Access-Control-Allow-Origin "http://localhost:5173"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Access-Control-Allow-Headers, Authorization, X-Requested-With, Accept"
Header always set Access-Control-Allow-Credentials "true"

# Handle OPTIONS method
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Ensure PHP files are handled correctly
AddType application/x-httpd-php .php
DirectoryIndex index.php

# Allow access to PHP files
<FilesMatch "\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch> 